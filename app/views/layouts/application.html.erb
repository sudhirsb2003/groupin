
<!DOCTYPE html>
<html>
<head>
  <title>Groupin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
  <link href='http://fonts.googleapis.com/css?family=Sarina' rel='stylesheet' type='text/css'>

  <style>
    body {font-family: 'Ubuntu', sans-serif;font-size:12px;}
    logo{ text-shadow: 0.1em 0.1em 0.05em #333;
    font-family: 'Sarina', cursive; font-size:70px;color:orange}
  </style>

</head>

 <body style="padding:40px;">

 <logo> Mumbai on rails </logo><br>
  <div class="bs-docs-example" style ="float:right;font-size:12px;">
      <% if signed_in? %>
       <%= link_to current_user.full_name %>(<% if current_user.admin? %> <b style="color:blue">Admin</b> <% else %> Moderator <% end %>) | 
       <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %> |
       <%= link_to "Edit Account", edit_user_registration_path %> | 
       <b><%= link_to 'Add Event', new_event_path if current_user.admin? %></b>  |
       <b><%= link_to 'Back to Home', root_url %></b> 
      <% else %>
       <%= link_to "sign in", new_user_session_path %> |
       <%= link_to "signup", new_user_registration_path %> |
       <b><%= link_to 'Back to Home', root_url %></b>  
      <% end %>
  </div>
  <br>

</div>

<hr>
<br><br><br>
<% flash.each do |type, message| %>
 <div class="alert <%= simple_class_for(type) %> fade in">
  <%= message %>
 </div>
<% end %>
<div id ="content" style="width:610px;">
 <%= yield %>
 <%= yield :scripts %>
</body>
<footer>
</footer>
</html>
